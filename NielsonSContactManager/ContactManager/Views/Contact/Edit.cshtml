@model Contacts
@{
    string title = ViewBag.Action + " Contact";
    ViewData["Title"] = title;
    Contacts contacts = new Contacts(); // create an object of the Movie class
    contacts = Model; // assign the Model to the movie object (holds the data)
}

<h2>@ViewBag.Title</h2>

<form asp-action="Edit" method="post">
    <div asp-validation-summary="All" class="text-danger"></div>

    <div class="mb-3">
        <label asp-for="First" class="form-label">First</label>
        <input asp-for="First" class="form-control">
    </div>

    <div class="mb-3">
        <label asp-for="Last" class="form-label">Last</label>
        <input asp-for="Last" class="form-control">
    </div>

    <div class="mb-3">
        <label asp-for="Phone" class="form-label">Phone</label>
        <input asp-for="Phone" class="form-control">
    </div>

    <div class="mb-3">
        <label asp-for="Email" class="form-label">Email</label>
        <input asp-for="Email" class="form-control">
    </div>

    <div class="mb-3">
        <label asp-for="Organization" class="form-label">Organization</label>
        <input asp-for="Organization" class="form-control">
    </div>

    <div class="mb-3">
        <label asp-for="CategoryId" class="form-label">Category</label>
        <select asp-for="CategoryId" class="form-select">
            <option value="">select a category</option>
            @foreach (Category c in ViewBag.Categories)
            {
                <option value="@c.CategoryId">@c.Name</option>
            }
        </select>
    </div>

    <input type="hidden" asp-for="Id" />

    <button type="submit" class="btn btn-dark">Save</button>
    @if (ViewBag.Action == "Add")
    {
        <a asp-controller="Home" asp-action="Index"
           class="btn btn-dark">Cancel</a>
    }
    else
    {
        <a asp-controller="Contact" asp-action="Details" asp-route-id="@contacts.Id"
           class="btn btn-outline-dark">Cancel</a>
    }
</form>

